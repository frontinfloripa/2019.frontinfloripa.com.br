.header
  height 100%
  position relative
  bg('bg-dot.png')
  background-repeat repeat
  background-color #000
  overflow hidden

  +below('phone')
    height 600px

  &:before
    content ''
    width 100%
    height 500px
    bg('header-bridge-tiny.png')
    background-position center bottom
    position absolute
    bottom -20px
    left 0
    background-size 100% auto

    +below('phone')
      bottom -30px
      background-size 800px auto
      background-position calc('100% + 130px') bottom

  &:after
    content ''
    width 120%
    height 300px
    background #fff
    position absolute
    bottom -240px
    left 0
    transform rotate(-3.5deg)

    +below('phone')
      bottom -280px

  &-edition
    position absolute
    left -120px
    top 65px
    padding .6em 0
    background #fff
    width 400px
    transform rotate(-45deg)
    text-align center
    font-weight bold
    font-size 1.4rem
    color #000
    text-transform uppercase

    +below('phone')
      font-size 1rem
      left -150px
      top 35px

  &-top
    padding-top 3em
    padding-right 2em

    +below('phone')
      padding-top 2em

    &-content
      display flex
      justify-content flex-end

    &-links
      .button
        font-size 1.2rem
        margin 0 1em
        color #fff
        background #000
        border 1px solid rgba(#fff, .5)
        box-shadow none
        transition border .1s ease

        &:hover
          box-shadow none
          border-color #fff

        +below('phone')
          font-size 1.1rem
          margin 0
          padding 1em 0
          border 0
          border-bottom 2px solid #fff

          &:first-child
            margin-right 2em

  &-wrapper
    position relative
    wrapper()
    center()
    flex-direction column
    height 100%

  &-content
    display flex
    width 100%
    margin-top -16em

    +below('phone')
      display block
      margin-top -14em

    &__logo
      flex-basis 33%
      center()

    &__text
      flex 1
      padding-left 1em

      +below('phone')
        padding-left 0

  &-logo
    width 260px
    height @width
    bg('logo-mono.svg')
    background-size 100% auto
    hide-text()

    +below('phone')
      width 180px
      height 190px

  &-slogan
    font-size 4.4rem
    color #fff
    line-height 1.3

    +below('phone')
      display none

  &-date
    padding 2em 0

    +below('phone')
      padding 1em 0

    span
      color #fff
      font-family $font-title
      font-weight bold
      font-size 2.4rem

      &.divisor
        padding 0 .3em
        opacity .4

      +below('phone')
        &.text
          display block
          text-align center
          padding-bottom .3em

        &.divisor
          display none

  &-actions
    padding-top 1em

    +below('phone')
      padding-top 0
      text-align center

    .button
      background $color-primary

      +below('phone')
        font-size 1.5rem

.features
  padding 10em 0 20em
  position relative
  overflow hidden

  +below('phone')
    padding 7em 0 15em

  &:before
    content ''
    width 400px
    height 70px
    position absolute
    bottom 0
    left 50%
    margin-left -600px
    bg('plus-bg.svg')
    background-size 7px auto
    background-repeat repeat
    background-position 0 0

  &:after
    content ''
    width 120%
    height 300px
    background $color-default
    position absolute
    bottom -240px
    left 0
    transform rotate(-3.5deg)

  &-wrapper
    wrapper()
    display flex

    +below('phone')
      display block

  &-column
    flex 1

  &-title
    font-size 3.5rem
    margin-bottom .3em

    +below('phone')
      font-size 3.2rem
      margin-bottom .8em

  &-description
    font-size 1.2rem
    line-height 2
    margin-bottom 1.6em

  &-images
    list-reset()
    position relative
    padding-top 4em
    padding-left 6em
    display flex
    flex-wrap wrap

    +below('tablet')
      margin-top 6em
      padding-left 0

    &:before
      content ''
      position absolute
      top 50%
      left 50%
      width 280px
      height @width
      margin-left -(@width / 2)
      margin-top -(@width / 2)
      z-index 1
      border 2em solid $color-primary

      +below('phone')
        $ball-size = 200px
        width $ball-size
        height $ball-size
        margin-left -100px
        margin-top -100px

    li
      flex-basis 50%
      height auto
      z-index 10

      &:nth-child(even)
        margin-top 3em
        margin-left -2em
        margin-bottom 2em

      &:nth-child(3)
        z-index 15

      img
        max-width 100%
        height auto
        border-radius 2px
        box-shadow 0 0 30px rgba($color-default, .2)

.speakers
  background $color-default
  padding 10em 0 5em
  position relative

  +below('phone')
    padding 5em 0 3em

  &-wrapper
    wrapper()

  &-title
    font-size 4rem
    color #fff
    display inline-block
    border .1em solid #fff
    padding .2em .6em

    +below('phone')
      font-size 3.2rem

  &-list
    list-reset()
    padding-top 7em
    display flex
    flex-wrap wrap
    justify-content space-between

    +below('phone')
      display block

.speaker
  &-item
    background #fff
    flex-basis 48%
    display flex
    margin-bottom 5em
    $border_base = 5px solid #000

    &.speaker-item--presenter
      background $color-primary

    &-column
      &__image
        flex-basis 40%
        border $border_base
        border-left 0

      &__content
        flex 1
        border $border_base
        border-left 0
        position relative

    &__avatar
      height 190px
      background #ddd
      center()

      +below('phone')
        width 100%
        height 100%
        min-width 120px

      &-off
        font-size 10rem
        color #555

      img
        width 100%
        height 100%
        object-fit cover
        filter grayscale(100%)
        transition filter .5s ease

    &__title
      font-size 2.4rem
      padding .7em .1em .7em .8em
      border-bottom $border_base

    &__talk
      font-size 1.4rem
      line-height 1.5
      font-weight bold
      padding 1em 1em 1em 1.5em

      +below('phone')
        min-height 70px

    &__social
      position absolute
      left 0
      bottom 0
      width 100%
      height 40px
      display flex

      +below('phone')
        position relative

      &-link
        center()
        flex 1
        color #fff
        font-size 1.1rem
        font-weight bold
        text-decoration none
        transition opacity .2s ease

        &:hover
          opacity .95

        &.gh
          background #222

        &.tw
          background #1da1f2

.location
  position relative
  overflow hidden
  padding 20em 0

  +below('phone')
    padding 10em 0 12em

  &:before
    content ''
    width 120%
    height 300px
    background #000
    position absolute
    bottom -240px
    left 0
    transform rotate(-3deg)

  &:after
    content ''
    width 120%
    height 200px
    background $color-default
    position absolute
    top -150px
    left -100px
    transform rotate(-3deg)

    +below('phone')
      left -60px

  &-wrapper
    wrapper()
    display flex

    +below('phone')
      display block

    &:hover
      .location-picture
        filter none

  &-content
    min-height 300px
    flex-basis 48%
    display flex
    align-items center

  &-picture
    flex-basis 0
    flex 1
    bg('hotel-maria-do-mar_skyline.jpg')
    background-size cover
    filter grayscale(100%)
    transition filter .5s ease

    +below('phone')
      display none

  &-title
    display block
    font-size 1.5rem
    font-weight bold
    padding-bottom 1.6em

  &-venue
    font-size 3.4rem
    padding-bottom .1em
    text-indent -1px

  &-address
    font-size 1.4rem
    font-style normal
    line-height 1.6
    padding-bottom 2em

  &-button
    font-size 1.3rem
    border 2px solid $color-default

.schedule
  padding 10em 0 15em
  background $color-default
  position relative
  overflow hidden

  +below('phone')
    padding 5em 0 12em

  &:before
    content ''
    width 120%
    height 300px
    background $color-primary
    position absolute
    bottom -240px
    left 0
    transform rotate(-3deg)

  &-wrapper
    wrapper()

  &-title
    font-size 4rem
    color #fff
    display inline-block
    border .1em solid #fff
    padding .2em .6em

    +below('phone')
      font-size 3.2rem

  &-list
    list-reset()
    color #fff
    padding-top 4em
    max-width 800px

  &-item
    display flex
    margin 4em 0

    &__time
      font-size 2.4rem
      font-weight bold
      position relative

      +below('phone')
        font-size 2rem

      &:after
        content ''
        position absolute
        display block
        width 150px
        height 10px
        border-top 2px solid #555
        left calc('100% + 10px')
        top 15px

        +below('phone')
          top 12px
          width 35px

    &__title
      font-size 2.6rem
      text-indent -1px

      +below('phone')
        font-size 2.2rem
        line-height 1.3

    &__talk
      .schedule-item__time
        display none

      .schedule-item__title
        color $color-primary

    &__description
      color #ccc
      font-size 1.6rem
      font-weight bold
      padding-top .3em
      line-height 1.6

      +below('phone')
        font-size 1.4rem

  &-column__time
    flex-basis 250px

    +below('phone')
      flex-basis 120px

  &-column__content
    flex-basis 0
    flex 1

.tickets
  position relative
  padding 7em 0 18em
  background $color-primary
  overflow hidden

  +below('phone')
    padding 4em 0 14em

  &:before
    content ''
    width 120%
    height 300px
    background #fff
    position absolute
    bottom -240px
    left 0
    transform rotate(-3deg)

  &-wrapper
    wrapper()

  &-title
    font-size 4rem
    color $color-default
    display inline-block
    border .1em solid $color-default
    padding .2em .6em

    +below('phone')
      font-size 3.2rem

  &-list
    list-reset()
    padding-top 5em
    display flex

    +below('phone')
      display block

.ticket
  &-item
    position relative
    background #fff
    padding 2.5em 3em
    flex-basis 250px
    margin-right 4em
    overflow hidden

    +below('phone')
      margin-right 0
      margin-bottom 2em
      max-width 260px

    &--off
      pointer-events none

      *,
      .ticket-item__description
        color #ccc

      .button
        border-color #ccc !important
        box-shadow none !important

      &:after
        content 'Esgotado'
        display block
        position absolute
        width 400px
        transform rotate(-40deg)
        left -75px
        top 90px
        background red
        text-align center
        color #fff
        padding .3em 0
        font-size 2rem
        font-family $font-title
        text-transform uppercase

    &:last-child
      margin-right 0

    &:before
      content ''
      display block
      position absolute
      border-radius 50%
      width 50px
      height @width
      margin-top -(@width / 2)
      background $color-primary
      top 50%
      right -(@width / 2)

    &__title
      font-size 2.6rem
      padding-bottom .1em

    &__description
      font-family $font-title
      font-size 1.2rem
      color #555

    &__price
      padding 1em 0
      font-size 2.4rem
      font-weight bold

    .button
      border 2px solid $color-default
      font-size 1.6rem
      padding .7em 1.2em

.support
  padding 13em 0 8em

  +below('phone')
    padding 5em 0 0

  &-wrapper
    wrapper()

  &-title
    font-size 4rem
    color $color-default
    display inline-block
    border .1em solid $color-default
    padding .2em .6em

    &.support-title--apoio
      font-size 3.4rem

      +below('phone')
        font-size 3.2rem

    +below('phone')
      font-size 3.2rem

  &-list
    list-reset()
    padding 4em 0
    display flex
    align-items center
    flex-wrap wrap
    position relative
    margin-bottom 6em

    &.support-list--patrocinio
      padding-top 3em

      .support-item
        margin 4em 4em 4em .5em

      .support-link
        img
          max-height 120px

          +below('phone')
            max-height 100px

    &.support-list--apoio
      padding-top 6em

      .support-item
        margin 1em 4em 2em .5em

      .support-link
        img
          max-height 40px

  &-item
    opacity 1
    transition opacity .5s ease

    &:hover
      opacity .9

.footer
  background #eee
  padding 5em 0

  +below('phone')
    padding 5em 1.6em 3em

  &-wrapper
    wrapper()
    display flex

    +below('phone')
      display block

  &-column
    flex 1

    +below('phone')
      padding-bottom 3em

    &--coc
      +below('phone')
        text-align center

    &--email
      text-align center

    &--social
      text-align right

      .footer-link
        margin-left 1em

      +below('phone')
        text-align center

  &-text
    color $color-default
    font-size 1.4em

  &-link
    color $color-default
    font-size 1.4em
    font-weight bold
    border-bottom 1px solid #ccc
    padding-bottom 2px
    text-decoration none
