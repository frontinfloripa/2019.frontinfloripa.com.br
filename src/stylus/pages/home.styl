.header
  height 100%
  position relative
  bg('bg-dot.png')
  background-repeat repeat
  background-color #000
  overflow hidden

  &:before
    content ''
    width 100%
    height 500px
    bg('header-bridge.svg')
    background-position center bottom
    position absolute
    bottom 0
    left 0
    background-size 100% auto

    +below('phone')
      bottom -30px
      background-size 800px auto
      background-position calc('100% + 150px') bottom

  &:after
    content ''
    width 120%
    height 300px
    background #fff
    position absolute
    bottom -240px
    left 0
    transform rotate(-3deg)

    +below('phone')
      bottom -290px

  &-edition
    position absolute
    left -120px
    top 65px
    padding .6em 0
    background #fff
    width 400px
    transform rotate(-45deg)
    text-align center
    font-weight bold
    font-size 1.4rem
    color #000
    text-transform uppercase

    +below('phone')
      font-size 1rem
      left -150px
      top 35px

  &-top
    padding-top 3em
    padding-right 2em

    +below('phone')
      padding-top 2em

    &-content
      display flex
      justify-content flex-end

    &-links
      .button
        font-size 1.2rem
        margin 0 1em
        color #fff
        background #000
        border 1px solid rgba(#fff, .5)
        box-shadow none
        transition border .1s ease

        &:hover
          box-shadow none
          border-color #fff

        +below('phone')
          font-size 1.1rem
          margin 0
          padding 1em 0
          border 0
          border-bottom 2px solid #fff

          &:first-child
            margin-right 2em

  &-wrapper
    position relative
    wrapper()
    center()
    flex-direction column
    height 100%

  &-content
    display flex
    width 100%
    margin-top -16em

    +below('phone')
      display block
      margin-top -14em

    &__logo
      flex-basis 33%
      center()

    &__text
      flex 1
      padding-left 1em

      +below('phone')
        padding-left 0

  &-logo
    width 260px
    height @width
    bg('logo-mono.svg')
    background-size 100% auto
    hide-text()

    +below('phone')
      width 180px
      height 190px

  &-slogan
    font-size 4.4rem
    color #fff
    line-height 1.3

    +below('phone')
      display none

  &-date
    padding 2em 0

    +below('phone')
      padding 1em 0

    span
      color #fff
      font-family $font-title
      font-weight bold
      font-size 2.4rem

      &.divisor
        padding 0 .3em
        opacity .4

      +below('phone')
        &.text
          display block
          text-align center
          padding-bottom .3em

        &.divisor
          display none

  &-actions
    padding-top 1em

    +below('phone')
      padding-top 0
      text-align center

    .button
      background $color-primary

      +below('phone')
        font-size 1.5rem
